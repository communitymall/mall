<view class="container">
  <scroll-view scroll-x="true" scroll-y="true" class="address-list" wx:if="{{ merchantList.length > 0 }}">
    <view class="item" wx:for="{{merchantList}}" wx:key="id" bindtap="selectMerchant" data-store-id="{{item.id}}">
      <view class="l">
        <view class="name">{{item.merchantName}}</view>
      </view>
      <view class="c">
        <view class="mobile">{{item.merchantPhone}}</view>
        <view class="address">{{item.merchantAddress}}</view>
      </view>
    </view>
  </scroll-view>
  <view class="empty-view" wx:if="{{ merchantList.length <= 0 }}">
    <text class="text">没有相关的门店信息</text>
  </view>
</view>