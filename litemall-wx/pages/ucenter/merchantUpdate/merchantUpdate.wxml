    <view class="order">
      <view class="h" bindtap="changeAvatar">
        <view class="l">门店照片</view>
        <view class="r">上传</view>
      </view>
      <image class="img" src="{{merchantPic}}" background-size="cover"></image>
    </view>

  </view>

  <view class="btns">
    <button class="cannel" bindtap="cancelAddress">取消</button>
    <button class="save" bindtap="saveMerchant">保存</button>
  </view>

