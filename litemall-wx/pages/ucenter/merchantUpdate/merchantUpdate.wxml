<view class="add-address">
  <view class="add-form">
    <view class="form-item">
      门店名称： <input class="input" bindinput="bindinputMerchantName" placeholder="{{merchant.merchantName}}" value="{{merchant.merchantName}}" auto-focus/>
    </view>
    <view class="form-item">
      门店地址:  <input class="input" bindinput="bindinputMerchantAddress" value="{{merchant.merchantAddress}}" placeholder="{{merchant.merchantAddress}}" />
    </view>
    <view class="form-item">
      门店负责人:  <input class="input" bindinput="bindinputMerchantLeader" value="{{merchant.merchantLeader}}" placeholder="{{merchant.merchantLeader}}" />
    </view>
     <view class="form-item">
      门店电话:  <input class="input" bindblur="bindinputMerchantPhone" value="{{merchant.merchantPhone}}" placeholder="{{merchant.merchantPhone}}" />
    </view>
     <view class="form-item">
      门店营业执照:  <input class="input" bindinput="bindinputMerchantCode" value="{{merchant.merchantCode}}" placeholder="{{merchant.merchantCode}}" />
    </view>
    
